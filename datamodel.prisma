type User {
  id: ID! @id
  username: String! @unique
  firstName : String @default(value:"")
  lastName : String @default(value:"")
  avatar : String @default(value:"https://instagram.fvte1-1.fna.fbcdn.net/vp/fd4fe819f2bddbd8c621a8038db50ab0/5DA39AF1/t51.2885-19/44884218_345707102882519_2446069589734326272_n.jpg?_nc_ht=instagram.fvte1-1.fna.fbcdn.net")
  email : String! @unique
  bio : String
  posts : [Post]
  comments : [Comment!]!
  likes : [Like!]!
  following: [User!]! @relation(name: "FollowRelation")
  followers: [User!]! @relation(name: "FollowRelation")
  rooms : [Room]!
  loginSecret : String
}


type Post {
  id: ID! @id
  Likes : [Like!]!
  files : [File!]!
  user : User!
  location : String
  caption : String! 
  comments : [Comment!]
}

type Comment {
  id: ID! @id
  user : User
  text : String!
  post : Post
}

type File {
  id: ID! @id
  url : String!
  post : Post
}

type Like {
  id: ID! @id
  user : User
  post : Post
}

type Room {
  id : ID! @id
  participants : [User!]!
  messages : [Message!]!
}

type Message {
  id : ID! @id
  text : String!
  from : User @relation(name : "From")
  to : User @relation( name: "To")
  room : Room!
}