type User {
  id: ID! @id
  username: String! @unique
  firstName : String @default(value:"")
  lastName : String @default(value:"")
  email : String! @unique
  bio : String
  posts : [Post]
  comments : [Comment!]!
  likes : [Like!]!
  following: [User!]! @relation(name: "FollowRelation")
  followers: [User!]! @relation(name: "FollowRelation")
  rooms : [Room]!
  loginSecret : String
}


type Post {
  id: ID! @id
  Likes : [Like!]!
  files : [File!]!
  user : User!
  location : String
  caption : String!
  comments : [Comment!]
}

type Comment {
  id: ID! @id
  user : User!
  text : String!
  post : Post!
}

type File {
  id: ID! @id
  url : String!
  post : Post!
}

type Like {
  id: ID! @id
  user : User!
  post : Post!
}

type Room {
  id : ID! @id
  participants : [User!]!
  messages : [Message!]!
}

type Message {
  id : ID! @id
  text : String!
  from : User! @relation(name : "From")
  to : User! @relation( name: "To")
  room : Room!
}